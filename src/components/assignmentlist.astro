---
import type { Assignment } from '../lib/db'

interface Props {
    day: Assignment[]
} 

function prettyDate(date: string) {
    let d = new Date(date)
    if(d.toDateString() === new Date().toDateString()) {
        return "Today"
    } else if (d.toDateString() === new Date(Date.now() - 864e5).toDateString()) {
        return "Yesterday"
    } else {
        return d.toLocaleDateString()
    }
}

let { day } = Astro.props
---

<h1 class="text-white text-4xl text-center">{prettyDate(day[0].created_at!)}</h1>
<div class="flex flex-col items-center w-full gap-y-5">
    {day.map(assignment =>(
        <div onclick={`window.location = "/assignment/${assignment.id}"`} style="cursor: pointer;" class="card bg-info-content w-7/12 h-20">
            <div class="card-body items-center justify-center">
                <h1 class="card-title text-center">{assignment.name}</h1>
            </div>
        </div>
    ))}
</div>
